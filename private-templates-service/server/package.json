{
  "name": "private-templates-service",
  "version": "1.0.0",
  "description": "Collaboration tool simplifying the workflow of developing adaptive cards.",
  "main": "server.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "start": "node dist/server.js",
    "build": "tsc",
    "deploy": "tsc",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon --watch 'src/**/*.ts' --ignore 'src/**/*.spec.ts' --exec ts-node src/server.ts | bunyan",
    "client": "cd ../client && npm start",
    "link-client": "cd ../adaptivecards-templating-client/typescript && npm install && npm run build && npm link && cd ../../client && npm link adaptive-templating-service-typescript-node && npm install && cd src && npm link adaptive-templating-service-typescript-node",
    "init-app": "cd ../server && npm install && cd ../adaptivecards-templating-service && npm install && npm run build && npm link && cd ../server && npm link adaptivecards-templating-service && npm run build && npm run link-client"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/cors": "^2.8.6",
    "@types/express-session": "^1.17.0",
    "@types/helmet": "0.0.45",
    "@types/mongoose": "^5.7.8",
    "adaptivecards-templating": "^0.1.1-alpha.1",
    "applicationinsights": "^1.7.3",
    "async": "^3.1.1",
    "axios": "^0.19.2",
    "body-parser": "^1.19.0",
    "bunyan": "^1.8.12",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-session": "^1.17.0",
    "express-validator": "^6.3.1",
    "helmet": "^3.21.3",
    "jws": "^4.0.0",
    "mongoose": "^5.9.6",
    "passport": "^0.4.1",
    "passport-azure-ad": "^4.2.1",
    "uuid": "^3.4.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.0.2",
    "@testing-library/react": "^9.4.0",
    "@types/async": "^3.0.5",
    "@types/body-parser": "^1.17.1",
    "@types/bunyan": "^1.8.6",
    "@types/express": "^4.17.2",
    "@types/express-validator": "^3.0.0",
    "@types/jest": "^25.1.0",
    "@types/jws": "^3.2.1",
    "@types/passport": "^1.0.2",
    "@types/passport-azure-ad": "^4.0.3",
    "concurrently": "^5.1.0",
    "jest": "^25.1.0",
    "jest-dom": "^4.0.0",
    "nodemon": "^2.0.2",
    "office-ui-fabric-react": "^7.85.0",
    "ts-jest": "^25.0.0",
    "ts-node": "^8.6.2",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.7.5"
  }
}
